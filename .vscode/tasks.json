{
  "version": "2.0.0",
  "options": {
    "env": {
      "DOTNET_SKIP_FIRST_TIME_EXPERIENCE": "true"
    }
  },
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/Exceptionless.sln",
        "/p:GenerateFullPaths=true"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "panel": "dedicated"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "test",
      "command": "dotnet",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "args": [
        "test",
        "${workspaceFolder}/tests/Exceptionless.Tests/Exceptionless.Tests.csproj",
        "/p:GenerateFullPaths=true"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}